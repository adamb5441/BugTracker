@model IEnumerable<BugTracker.Models.ApplicationUser>
@using BugTracker.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.AvatarUrl)
        </th>*@
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="text-align: center">
            @Html.DisplayName("Role")
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.AvatarUrl)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @{ 
                var helper = new UserRoleHelper();
                var rl = helper.ListUserRoles(item.Id).FirstOrDefault();
            }
            @Html.Raw(rl)
        </td>
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", "Users", new { id = item.Id }, null) 
            @Html.ActionLink("Details", "Details", "Users", new { id = item.Id }, null) 
            @Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, null)
        </td>
        }
    </tr>
}

</table>
