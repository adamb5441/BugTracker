@model IEnumerable<BugTracker.Models.ApplicationUser>
@using BugTracker.Helpers
@{
    ViewBag.Title = "Index";
}

<div data-toggle="collapse" data-target="#userdrop" class="partialheader chat-room-head">
    <h3>Users</h3>
    <br />
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", "Users")

    }

</div>

    <div id="userdrop" class="collapse well">
        <table id="usertable" class="table">
            <thead>
                <tr>
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    @*<th>
                @Html.DisplayNameFor(model => model.AvatarUrl)
            </th>*@
                    <th style="text-align: center">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th style="text-align: center">
                        @Html.DisplayName("Role")
                    </th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        @*<td>
                        @Html.DisplayFor(modelItem => item.AvatarUrl)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @{
                                var helper = new UserRoleHelper();
                                var rl = helper.ListUserRoles(item.Id).FirstOrDefault();
                            }
                            @Html.Raw(rl)
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Users", new { id = item.Id }, null)
                                @Html.ActionLink("Details", "Details", "Users", new { id = item.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, null)
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
