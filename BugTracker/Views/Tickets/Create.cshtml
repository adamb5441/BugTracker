@model BugTracker.Models.Ticket

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal well" style="margin: 10px 20% 0px">
    <h2>Create Ticket</h2>
    <hr />
    <div style="padding: 10px 50px 0px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group margin-lg">
            @Html.LabelFor(model => model.ProjectId, "ProjectId", htmlAttributes: new { @class = "" })
            <div class="">
                @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group margin-lg">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "" })
            <div class="">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group padding-lg ">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
            <div class="">
                @Html.TextAreaFor(model => model.Description, new { @class = "comment form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group margin-lg">
            @Html.Label("TicketPriority", htmlAttributes: new { @class = "" })
            <div class="">
                @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TicketPriorityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group margin-lg">
            @Html.Label("TicketType", htmlAttributes: new { @class = "" })
            <div class="">
                @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group margin-lg">
            <div class="">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
